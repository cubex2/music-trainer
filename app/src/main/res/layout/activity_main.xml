<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cubex2.musictrainer.MainActivity">

    <Button
            android:text="@string/button_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="16dp"
            android:id="@+id/start_button" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            android:onClick="onStartClicked"/>
    <Button
            android:text="@string/button_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/settings_button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/start_button" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:onClick="onSettingsClicked"/>
</android.support.constraint.ConstraintLayout>
