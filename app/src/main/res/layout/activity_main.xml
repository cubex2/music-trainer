<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cubex2.musictrainer.MainActivity">

    <Button
            android:text="@string/button_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="0dp"
            android:id="@+id/play_button" android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="1.0"
    />
    <Button
            android:text="@string/submit_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/submit_button"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp" android:layout_marginLeft="8dp" android:enabled="false"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <GridView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/play_button" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/submit_button" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:numColumns="2" android:id="@+id/gridview"/>
</android.support.constraint.ConstraintLayout>
